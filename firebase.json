{
    "database": {
        "rules": "database.rules.json"
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint"
        ],
        "source": "functions"
    },
    "hosting": {
        "target": "heart4kids",
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ]
    },
    "storage": {
        "rules": "storage.rules"
    },
    "emulators": {
        "functions": {
            "port": "5007"
        },
        "firestore": {
            "port": "8087"
        },
        "database": {
            "port": "9007"
        },
        "hosting": {
            "port": "5007"
        },
        "pubsub": {
            "port": "8087"
        }
    }
}